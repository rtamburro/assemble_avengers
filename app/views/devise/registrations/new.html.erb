<div class="section has-text-white">
	<div class="container">
	<div class="columns is-centered">

		<div class="column is-4">
			
		<h2 class="title is-2 has-text-white">Sign Up</h2>

		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= f.error_notification %>

	  <div class="field">
	  	<div class="control">
	    <%= f.input :name, autofocus: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label has-text-white" } %>
	  	</div>
		</div>

		<div class="field">
	  	<div class="control">
	    <%= f.input :username, input_html: { class:"input" }, wrapper: false, label_html: { class:"label has-text-white" } %>
	  	</div>
		</div>

		<div class="field">
	  	<div class="control">
	    <%= f.input :email, input_html: { class:"input" }, wrapper: false, label_html: { class:"label has-text-white" } %>
	  	</div>
		</div>
  
		  
		<div class="field">
			<div class="control">
				<%= f.input :password, input_html: { class:"input" }, wrapper: false, label_html: { class:"label has-text-white" }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
			</div>
		</div>

		<div class="field">
			<div class="control">
				<%= f.input :password_confirmation, input_html: { class: "input" }, wrapper: false, label_html: { class: "label has-text-white" } %>		
			</div>
		</div>

		<div class="field">
			<div class="control">
		 		<%= f.button :submit, "Sign up", class:"button is-info is-medium" %>
		 	</div>
		</div>

		<% end %>
			<br />
			
		</div>
	</div>
</div>