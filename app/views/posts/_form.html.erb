<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field has-text-white">
  <div class="control has-text-white">
    <%= f.input :post, label: "Post about it", input_html: { class: "textarea "}, wrapper: false,
    label_html: { class: "label has-text-white" }, placeholder: "Compose a new post...", autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>